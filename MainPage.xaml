                        <Label Text="FITNESS" TextColor="White" FontSize="14" FontAttributes="Bold" CharacterSpacing="2"/>
                        <Label Text="PRO" TextColor="#FFD700" FontSize="20" FontAttributes="Bold" CharacterSpacing="1"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>

