                        Stroke="White" StrokeThickness="1" 
                        BackgroundColor="#222"
                        HeightRequest="40" 
                        Padding="12,0"
                        StrokeShape="RoundRectangle 20"
                        VerticalOptions="Center">
                    <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                        <Label Text="❤️" FontSize="16" VerticalOptions="Center"/>
